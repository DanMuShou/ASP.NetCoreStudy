@{
    Layout = "_Layout";
    ViewBag.Title = "新建人员信息";
}

<!DOCTYPE html>
<body>
<div>
    <a asp-controller="Person" asp-action="Home">返回主页</a>
    <h2>新建人员信息</h2>
    <div class="w-50">
        <form asp-controller="Person" asp-action="Create" method="post">

            @* PersonName *@
            <div class="form-field flex">
                <div class="w-25">
                    <label for="PersonName" class="form-label pt">人员名称</label>
                </div>
                <div class="flex-1">
                    <input type="text" id="PersonName" name="PersonName" class="form-input">
                </div>
            </div>
            @* Email *@
            <div class="form-field flex">
                <div class="w-25">
                    <label for="Email" class="form-label pt">Email</label>
                </div>
                <div class="flex-1">
                    <input type="text" id="Email" name="Email" class="form-input">
                </div>
            </div>
            @* DateOfBirth *@
            <div class="form-field flex">
                <div class="w-25">
                    <label for="DateOfBirth" class="form-label pt">出生日期</label>
                </div>
                <div class="flex-1">
                    <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-input">
                </div>
            </div>
            @* Gender *@
            <div class="form-field flex">
                <div class="w-25">
                    <label class="form-label">性别</label>
                </div>
                <div class="flex-1">
                    <input type="radio" id="Male" name="Gender" value="Male">
                    <label for="Male">男性</label>
                    <input type="radio" id="Female" name="Gender" value="Female">
                    <label for="Female">女性</label>
                    <input type="radio" id="Other" name="Gender" value="Other">
                    <label for="Other">其他</label>
                </div>
            </div>
            @* CountryName *@
            <div class="form-field flex">
                <div class="w-25">
                    <label class="form-label" for="CountryId">国家</label>
                </div>
                <div class="flex-1">
                    <select name="CountryId" id="CountryId" class="form-input">
                        <option value="">请选择国家</option>
                        @foreach (var country in ViewBag.CountryResponses)
                        {
                            <option value="@country.CountryId">@country.CountryName</option>
                        }
                    </select>
                </div>
            </div>
            @* Address *@
            <div class="form-field flex">
                <div class="w-25">
                    <label for="Address" class="form-label pt">地址</label>
                </div>
                <div class="flex-1">
                    <textarea id="Address" name="Address" class="form-input"></textarea>
                </div>
            </div>
            @* ReceiveNewLetters *@
            <div class="form-field flex">
                <div class="w-25">
                </div>
                <div class="flex-1">
                    <input type="checkbox" id="ReceiveNewLetters" value="true">
                    <label for="ReceiveNewLetters" class="form-label">订阅新闻</label>
                </div>
            </div>
            @* 提交 *@
            <div class="form-field flex">
                <div class="w-25">
                </div>
                <div class="flex-1">
                    <button class="button button-green-back">创建</button>
                    @if (ViewBag.Errors != null)
                    {
                        <div class="text-red ml">
                            <ul>
                            @foreach (var error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                                </ul>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>
</body>
